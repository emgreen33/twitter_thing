<form id="search-form" action="/" method="post">
  <input type="text" placeholder="username" name="twitter_handle">
  <input type="submit" value="Show me the tweets">
</form>

<ul>
  <% @users.each do |user| %>
    <li>User:  <a class="link-text" href="/<%=user.handle%>"> <%= user.handle %></a></li>
    <li><%= user.tweets.count %> tweets in the system</li>
    <%user.tweets.each do |tweet|%>
    <%=tweet.full_text %><br>
    <% end %><br>
  <% end %>
</ul>
